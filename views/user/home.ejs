<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Electronics Shop</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="icon" href="/images/PicsArt_12-05-03.53.10.png" type="image/png">
    <style>
        /* General Styles */
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        a {
            text-decoration: none;
            color: inherit;
        }

        img {
            max-width: 100%;
            height: auto;
        }

        /* Navbar */
        .navbar {
            padding: 15px 0;
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #8CBF3A;
        }

        .navbar-nav .nav-link {
            color: #555;
            font-size: 1rem;
            margin: 0 10px;
        }

        .navbar-nav .nav-link:hover {
            color: #8CBF3A;
        }

        /* Hero Section */
        .hero {
            background-color: #f5f5f5;
            padding: 50px 0;
        }

        .hero h1 {
            font-size: 2.5rem;
            margin-bottom: 20px;
        }

        .hero .btn {
            background-color: #8CBF3A;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 1rem;
        }

        .hero .btn:hover {
            background-color: #8CBF3A;
        }

        /* Categories Section */
        .categories {
            background-color: #f9f9f9;
            padding: 30px 0;
        }

        .categories h2 {
            font-size: 2rem;
            margin-bottom: 30px;
        }

        .categories .category {
            text-align: center;
            margin: 10px;
        }

        .categories .category img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            border: 2px solid #8CBF3A;
            padding: 10px;
            margin-bottom: 10px;
        }

        .categories .category p {
            font-size: 1rem;
            font-weight: 500;
            margin: 0;
        }

        /* Products Section */
        .products h2 {
            font-size: 2rem;
            margin-bottom: 30px;
            color: #333;
        }

        .products .card {
            border: 1px solid #e0e0e0;
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

        .products .card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

        .products .card-title {
            font-size: 1rem;
            color: #8CBF3A;
            margin-bottom: 10px;
        }

        .products .card-text {
            font-size: 0.9rem;
        }

        .products .card-text del {
            color: #999;
        }

        /* Footer */
        footer {
            background-color: #8CBF3A; /* Updated background color */
            color: white; /* Ensures text remains readable */
        }

        footer a {
            color: white; /* Ensures links in the footer are readable */
            text-decoration: none;
            transition: color 0.3s ease;
        }

        footer a:hover {
            color: #f0f0f0; /* Slightly lighter color on hover */
        }

        footer .input-group button {
            background-color: #6A9F2E; /* Matches footer tone */
            color: white;
            border: none;
        }

        footer .input-group button:hover {
            background-color: #5A8A27; /* Darker hover effect */
        }


    </style>
</head>
<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/images/PicsArt_12-05-03.53.10.png" alt="Logo" style="width: 30px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <section class="hero">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-4"><img src="/images/hero1.jpg" alt="Electronics 1" class="img-fluid"></div>
                <div class="col-md-4">
                    <h1>PCB Boards</h1>
                    <a href="/shop" class="btn btn-success">Buy Now</a>
                </div>
                <div class="col-md-4"><img src="/images/hero2.jpg" alt="Electronics 2" class="img-fluid"></div>
            </div>
        </div>
    </section>

    <!-- Categories Section -->
    <section class="categories py-5">
        <div class="container text-center">
            <h2>Shop by Category</h2>
            <div class="d-flex justify-content-center">
                <% const categories = ['AT Mega', 'Arduino', 'Texas', 'Microchip', 'Molex', 'Analog Devices', 'Intel']; %>
                <% categories.forEach(category => { %>
                    <div class="category mx-2">
                        <a href="/shop/<%= category.toLowerCase() %>">
                            <img src="/images/<%= category.toLowerCase() %>.png" alt="<%= category %>" class="img-fluid">
                            <p><%= category %></p>
                        </a>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Best Selling Products Section -->
    <section class="products py-5">
        <div class="container">
            <h2 class="text-center">Best Selling Products</h2>
            <div class="row">
                <% const products = [
                    { name: 'IC 7400', price: '₹69', oldPrice: null, image: 'ic7400.png' },
                    { name: 'IR - Transmitter', price: '₹159', oldPrice: '₹200', image: 'ir_transmitter.png' },
                    { name: 'Transistor BC557', price: '₹25', oldPrice: '₹35', image: 'transistor.png' },
                    { name: 'Raspberry Pi 4', price: '₹2599', oldPrice: null, image: 'raspberry_pi.png' },
                ]; %>
                <% products.forEach(product => { %>
                    <div class="col-md-3">
                        <div class="card">
                            <img src="/images/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
                            <div class="card-body text-center">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text">
                                    <strong><%= product.price %></strong>
                                    <% if (product.oldPrice) { %>
                                        <del><%= product.oldPrice %></del>
                                    <% } %>
                                </p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-3">
                    <h5>Contact Us</h5>
                    <p>Address: Lords, London, UK - 1920</p>
                    <p>Phone: 002 63546 24624</p>
                    <p>Fax: 002 78965 39652</p>
                    <p>Email: <a href="mailto:support@example.com">support@example.com</a></p>
                </div>
                <div class="col-md-3">
                    <h5>Information</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Your Account</a></li>
                        <li><a href="#">Free Shipping Policy</a></li>
                        <li><a href="#">Return Policy</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Support</h5>
                    <ul class="list-unstyled">
                        <li><a href="#">Payment Method</a></li>
                        <li><a href="#">Product Support</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5>Join Our Mailing List</h5>
                    <form>
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Your Email Address">
                            <button class="btn btn-dark">→</button>
                        </div>
                    </form>
                    <h5 class="mt-3">Download Our Mobile Apps</h5>
                    <img src="/path-to-app-store-badges.png" alt="App Stores" style="width: 100%;">
                </div>
            </div>
        </div>
    </footer>    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
