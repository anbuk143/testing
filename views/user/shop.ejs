<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Imbed Software - Shop</title>
    <link rel="icon" href="/images/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+3:ital,wght@0,200..900;1,200..900&display=swap" rel="stylesheet">
    <style>
        /* Flexbox layout for responsiveness */
        body {
            font-family: 'Source Sans 3', sans-serif;
            margin: 0;
            background-color: #d3d2d1;
            padding: 0;
            box-sizing: border-box;
        }

        /* Navbar */
        .navbar {
            width: 100%;
            padding: 15px 0;
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: #8CBF3A;
        }

        .navbar-nav .nav-link {
            font-weight: 500;
            color: #555;
            font-size: 1rem;
            margin: 0 10px;
        }

        .navbar-nav .nav-link:hover {
            color: #8CBF3A;
        }

        aside {
            position: fixed;
            top: 60px;
            /* Adjust based on header height */
            left: 0;
            padding: 10px;
            padding-top: 30px;
            height: calc(100vh - 60px);
            /* Full height minus header */
            overflow-y: auto;
            background-color: #f8f8f8;
            border-right: 1px solid #ddd;
        }

        main {
            margin-left: 22%;
            /* Adjust according to the aside width */
        }


        main {
            width: 75%;
            padding: 20px;
        }

        strong{
            color: black;
        }

        del {
            color: #999;
        }
        
        .pagination a,
        .pagination span {
            margin: 0 5px;
            text-decoration: none;
            color: #333;
        }

        footer {
            background-color: #8bc34a;
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        footer div {
            width: 30%;
            margin-bottom: 20px;
        }

        aside ul {
            list-style-type: none;
            padding: 0;
        }

        .reset-button{
            color: white;
            border: 0.3px solid #555;
            background-color: #585858;
            border-radius: 5px;
        }

        .continue-button{
            color: #262626;
            margin-left: 15px;
            border: 0.3px solid #555;
            background-color: #94f000;
            border-radius: 5px;
        }

        .product-item img {
            width: 100%;
            aspect-ratio: 1 / 1;
            object-fit: cover;
            /* Ensures the image covers the space without distortion */
            border-radius: 5px;
            /* Optional: smooth corners */
            height: 200px;
            object-fit: cover;
        }

        .product-name{
            color: #7fa73f;
            padding-top: 5px;
            font-size: 1rem;
        }

        .product-grid {
            padding-top: 100px;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 20px;
            max-width: 1200px; /* Limits the width */
            margin: 0 auto;    /* Centers the grid */
        }

        .product-item {
            width: 200px;
            border-radius: 3px;
            background-color: #e4e4e4;
            border: 1px solid #a7a7a7;
            text-align: center;
            padding: 10px;
            border: 1px solid #ddd;
            transition: transform 0.3s;
        }

        .product-item:hover {
            cursor: pointer;
            transform: scale(1.05); /* Optional: subtle hover effect */
            box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
        }

        @media (max-width: 768px) {
            .product-grid {
                grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
                gap: 10px;
            }
        }

        @media (max-width: 768px) {

            aside,
            main {
                width: 100%;
                padding: 10px;
            }

            footer div {
                width: 100%;
            }
        }
    </style>
</head>

<body>
    <!-- Header Section -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
            <div class="container">
                <a class="navbar-brand" href="#">
                    <img src="/images/logo.png" style="width: 30px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <li class="nav-item"><a class="nav-link" href="/shop">Shop</a></li>
                        <li class="nav-item"><a class="nav-link" href="/cart">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" href="/wishlist">Wishlist</a></li>
                    </ul>
                    <!-- User Profile Section -->
                    <div class="dropdown ms-3">
                        <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle"
                            id="userProfileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <% if(name){ %>
                                <img src="/images/userProfile.jpg"
                                    style="width: 30px; height: 30px; border-radius: 50%;">
                                <span class="ms-2">
                                    <%= name %>
                                </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                            <li><a class="dropdown-item" href="/login">My Profile</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href=""
                                    onclick="document.getElementById('logoutForm').submit(); return false;">Logout</a>
                            </li>
                        </ul>
                        <% } else {%>
                            <img src="/images/userProfile.jpg" style="width: 30px; height: 30px; border-radius: 50%;">
                            <span class="ms-2">
                                <%= name %>
                            </span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userProfileDropdown">
                                <li><a class="dropdown-item" href="/login">Log In</a></li>
                            </ul>
                            <% } %>
                    </div>
                    <!-- End of User Profile Section -->
                </div>
            </div>
        </nav>
    </header>


    <div style="display: flex; flex-wrap: wrap;">
        <!-- Filters -->
        <aside>
            <h3>Product Categories</h3>
            <ul>
                <% categories.forEach(category=> { %>
                    <li><input type="checkbox"><%= category.categoryName %></li>    
                <% }); %>
            </ul>

            <h3>Price Range</h3>
            <ul>
                <li><input type="radio" name="price"> Below ₹250</li>
                <li><input type="radio" name="price"> ₹250 - ₹500</li>
                <li><input type="radio" name="price"> ₹500 - ₹1000</li>
                <li><input type="radio" name="price"> ₹1000 - ₹2000</li>
                <li><input type="radio" name="price"> Above ₹2000</li>
            </ul>

            <button class="reset-button">RESET</button>
            <button class="continue-button">CONTINUE</button>
        </aside>

         <!-- Product Grid -->
         <main>
            <div class="product-grid">
                <% products.forEach(product=> { %>
                <a href="/product/<%= product._id %>" target="_blank" style="text-decoration: none;"><div class="product-item">
                    <img src="<%= product.productImage1 %>" alt="<%= product.productName %>">
                    <h5 class="product-name"><%= product.productName %></h5>
                    <p style="font-size: 0.8rem;color: black;"><%= product.productCategory %></p>
                        <% if(product.productOfferPrice){ %>
                            <strong>₹<%= product.productOfferPrice %></strong>
                            <del>₹<%= product.productPrice %></del>
                        <% } else { %>
                            <strong>₹<%= product.productPrice %></strong>
                        <% } %>
                </div></a>
                <% }) %>
            </div>
        </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Pagination -->
    <div class="pagination">
        <a href="#">1</a>
        <a href="#">2</a>
        <a href="#">3</a>
        <span>...</span>
        <a href="#">9</a>
    </div>

    <!-- Footer -->
    <footer>
        <div>
            <h4>Contact Us</h4>
            <p>London, UK - 1259</p>
            <p>Phone: 020 8365 2462</p>
            <p>FAX: 020 7865 369652</p>
            <p>Email: support@example.com</p>
        </div>

        <div>
            <h4>Information</h4>
            <p>Your Account</p>
            <p>Free Shipping Policy</p>
            <p>Return Policy</p>
        </div>

        <div>
            <h4>Download Our App</h4>
            <a href=""><img src="/images/playstore.webp" alt="App Stores" style="max-width: 100px;"></a>
            <a href=""><img src="/images/appstore.png" alt="App Stores" style="max-width: 110px;margin-left: 20px;"></a>
        </div>
    </footer>
</body>

</html>