    .signup-container {
      margin: 50px 0px;
      background-image: url('/images/log.jpg'); /* Background image */
      background-size: cover;
      background-position: center;
      padding: 20px;
      border-radius: 8px;
      width: 100%;
      max-width: 400px;
      box-shadow: 10px 10px 15px rgba(0, 0, 0, 0.5);
    }

    .signup-container h2 {
      text-align: center;
      margin-bottom: 20px;
      color: #333;
    }

    .form-group {
