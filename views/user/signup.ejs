    }

    .form-group label {
      display: block;
      margin-bottom: 5px;
      color: white;
    }

    .form-group input {
        width: 100%;
        background-color: rgba(255, 255, 255, 0.5); /* Transparent background */
        border: 1px solid #8CBF3A; /* Green border */
