</footer>
  
  <script>
    const form = document.getElementById('signUpForm');
    const username = document.getElementById('username');
    const email = document.getElementById('email');
    const phone = document.getElementById('phone');
    const usernameError = document.getElementById('username-error');
    const emailError = document.getElementById('email-error');
    const phoneError = document.getElementById('phone-error');

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    const usernameRegex = /^[a-zA-Z\s]+$/;
    const phoneRegex = /^[0-9]{10}$/;

    // Validate username
    username.addEventListener('blur', () => {
      if (username.value.trim() === '') {
        usernameError.textContent = '*Name is required';
        username.classList.add('error');
      } else if (!usernameRegex.test(username.value.trim())) {
        usernameError.textContent = '*Name must only contain letters';
        username.classList.add('error');
      } else {
        usernameError.textContent = '';
        username.classList.remove('error');
      }
    });

    // Validate email
    email.addEventListener('blur', () => {
      if (email.value.trim() === '') {
        emailError.textContent = '*Email is required';
        email.classList.add('error');
      } else if (!emailRegex.test(email.value.trim())) {
        emailError.textContent = '*Invalid email format';
        email.classList.add('error');
      } else {
        emailError.textContent = '';
        email.classList.remove('error');
      }
    });

    // Validate phone
    phone.addEventListener('blur', () => {
      if (phone.value.trim() === '') {
        phoneError.textContent = '*Phone number is required';
        phone.classList.add('error');
      } else if (!phoneRegex.test(phone.value.trim())) {
        phoneError.textContent = '*Phone number must be 10 digits';
        phone.classList.add('error');
      } else {
        phoneError.textContent = '';
        phone.classList.remove('error');
      }
    });

    // Prevent form submission if fields are invalid
    form.addEventListener('submit', (e) => {
      if (
        username.value.trim() === '' ||
        email.value.trim() === '' ||
        phone.value.trim() === '' ||
        username.classList.contains('error') ||
        email.classList.contains('error') ||
        phone.classList.contains('error')
      ) {
        e.preventDefault();
      }
    });
  form.addEventListener('submit', (e) => {
  let hasError = false;

  // Validate username
  if (username.value.trim() === '') {
    usernameError.textContent = '*Name is required';
    username.classList.add('error');
    hasError = true;
  } else if (!usernameRegex.test(username.value.trim())) {
    usernameError.textContent = '*Name must only contain letters';
    username.classList.add('error');
    hasError = true;
  } else {
    usernameError.textContent = '';
    username.classList.remove('error');
  }

  // Validate email
  if (email.value.trim() === '') {
    emailError.textContent = '*Email is required';
    email.classList.add('error');
    hasError = true;
  } else if (!emailRegex.test(email.value.trim())) {
    emailError.textContent = '*Invalid email format';
    email.classList.add('error');
    hasError = true;
  } else {
    emailError.textContent = '';
    email.classList.remove('error');
  }

  // Validate phone
  if (phone.value.trim() === '') {
    phoneError.textContent = '*Phone number is required';
    phone.classList.add('error');
    hasError = true;
  } else if (!phoneRegex.test(phone.value.trim())) {
    phoneError.textContent = '*Phone number must be 10 digits';
    phone.classList.add('error');
    hasError = true;
  } else {
    phoneError.textContent = '';
    phone.classList.remove('error');
  }

  // Prevent form submission if there's an error
  if (hasError) {
    e.preventDefault();
  }
});

  </script>
</body>

